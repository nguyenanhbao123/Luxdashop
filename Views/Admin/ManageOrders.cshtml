<style>
    :root {
        --green: #4e73df; /* success */
        --black: #5a5c69; /* dark text */
        --white: #fff;
        --light-color: #858796; /* secondary */
        --light-bg: #f8f9fc; /* light background */
        --border: 0.1rem solid #e3e6f0;
        --box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15);
        --success: #1cc88a;
        --danger: #e74a3b;
        --warning: #f6c23e;
    }


    .container {
        margin-top: 150px;
    }

    .card {
        border-radius: 10px;
        box-shadow: var(--box-shadow);
        border: none;
        margin-bottom: 25px;
        transition: transform 0.3s;
        background-color: var(--white);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .p-4 {
        font-size: 1.4rem;
    }

    .invoice-header {
        background: linear-gradient(to right, var(--green), #9cad3f);
        color: var(--white);
        border-radius: 10px 10px 0 0 !important;
        padding: 15px 20px;
        font-size: 1.7rem;
    }

    .invoice-status {
        font-weight: 600;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        background-color: var(--white);
    }

    .status-pending {
        color: var(--warning);
        border: 1px solid var(--warning);
    }

    .status-confirmed {
        color: var(--success);
        border: 1px solid var(--success);
    }

    .status-canceled {
        color: var(--danger);
        border: 1px solid var(--danger);
    }

    .product-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
        background-color: var(--light-bg);
        padding: 5px;
        border: var(--border);
    }

    .btn-cancel {
        background-color: var(--danger);
        color: var(--white);
        border: none;
        padding: 8px 20px;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
        }

    .invoice-details {
        background-color: var(--light-bg);
        border-radius: 8px;
        padding: 15px;
        border: var(--border);
    }

    .total-amount {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--green);
    }

    .search-container {
        background-color: var(--white);
        border-radius: 10px;
        padding: 20px;
        box-shadow: var(--box-shadow);
        margin-bottom: 25px;
        border: var(--border);
    }

    .filter-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 1.6rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.3s;
    }

        .filter-badge span.badge {
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
        }

        .filter-badge.active,
        .filter-badge:hover {
            outline: 2px solid var(--green);
            font-weight: 700;
        }

        /* Màu nền riêng cho từng loại */
        .filter-badge.all {
            background-color: var(--black);
            color: var(--white);
        }

        .filter-badge.pending {
            background-color: var(--warning);
            color: var(--white);
        }

        .filter-badge.confirmed {
            background-color: var(--success);
            color: var(--white);
        }

        .filter-badge.canceled {
            background-color: var(--danger);
            color: var(--white);
        }


    .input-group .form-control {
        height: 40px;
        font-size: 2rem;
        border-radius: 5px 0 0 5px;
    }

    .input-group .btn {
        font-size: 2rem;
        border-radius: 0 5px 5px 0;
        height: 70px;
    }


    .invoice-id {
        font-weight: 700;
        color: var(--black);
    }

    .customer-info {
        border-left: 3px solid var(--green);
        padding-left: 15px;
    }

    .btn-outline-primary {
        border-color: var(--green);
        color: var(--green);
    }

        .btn-outline-primary:hover {
            background-color: var(--green);
            color: var(--white);
        }

    .btn-outline-secondary {
        border-color: var(--light-color);
        color: var(--light-color);
    }

        .btn-outline-secondary:hover {
            background-color: var(--light-color);
            color: var(--white);
        }

    .btn-outline-success {
        border-color: var(--success);
        color: var(--success);
    }

        .btn-outline-success:hover {
            background-color: var(--success);
            color: var(--white);
        }

    .table-hover tbody tr:hover {
        background-color: rgba(var(--green), 0.1);
    }

    .pagination .page-item.active .page-link {
        background-color: var(--green);
        border-color: var(--green);
    }

    .pagination .page-link {
        color: var(--black);
    }

        .pagination .page-link:hover {
            color: #9cad3f;
        }


    .text-success {
        color: var(--success) !important;
    }

    .text-danger {
        color: var(--danger) !important;
    }
</style>
@model List<DoAnThietKeWeb1.Models.Invoice>

@{
    ViewData["Title"] = "Quản lí đơn hàng";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    Layout = "_AdminLayout";
}

@if (Model != null && Model.Any())
{
    <div class="container">
        <h2 class="mb-4">Danh sách đơn hàng</h2>
        <div class="search-container mb-4">
            <div class="row">
                <div class="col-md-14">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm theo mã hóa đơn, tên khách hàng..." style="
                            width: 800px;
                            height: 70px;
                        ">
                        <button class="btn" style="background-color: var(--green); color: var(--white);margin:0px;">
                            <i class="fas fa-search me-1"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status=""
                   class="filter-badge all @(ViewBag.SelectedStatus == "" ? "active" : "")">
                    Tất cả <span class="badge">@ViewBag.CountAll</span>
                </a>

                <a asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="Đang xử lý"
                   class="filter-badge pending @(ViewBag.SelectedStatus == "Đang xử lý" ? "active" : "")">
                    Chưa xác nhận <span class="badge">@ViewBag.CountPending</span>
                </a>

                <a asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="Đã xác nhận"
                   class="filter-badge confirmed @(ViewBag.SelectedStatus == "Đã xác nhận" ? "active" : "")">
                    Đã xác nhận <span class="badge">@ViewBag.CountConfirmed</span>
                </a>

                <a asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="Đã hủy"
                   class="filter-badge canceled @(ViewBag.SelectedStatus == "Đã hủy" ? "active" : "")">
                    Đã hủy <span class="badge">@ViewBag.CountCanceled</span>
                </a>

            </div>


        </div>
        @foreach (var invoice in Model)
        {
            <div class="card mb-4">
                <div class="card-body p-0">
                    <div class="invoice-header d-flex justify-content-between align-items-center p-3 border-bottom">
                        <div>
                            <span class="invoice-id fw-bold">@invoice.InvoiceId</span>
                            <span class="invoice-status ms-2 text-muted">@invoice.Status</span>
                        </div>
                        <div style="margin-left:100px; display:flex">
                            <span class="me-3"><i class="far fa-calendar me-1"></i>@invoice.CreatedDate?.ToString("dd/MM/yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</span>
                            <span>
                                <i class="fas fa-user me-1"></i>
                                @(invoice.UserId == null ? "Ẩn danh" : invoice.User?.Email ?? "Ẩn danh")
                            </span>

                        </div>
                    </div>

                    <div class="p-4">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                @{
                                    var firstDetail = invoice.InvoiceDetails.FirstOrDefault();
                                    var name = invoice.CustomerName ?? firstDetail?.Invoice?.CustomerName ?? "Không có";
                                    var phone = invoice.Phone ?? firstDetail?.Invoice?.Phone ?? "Không có";
                                    var address = invoice.DeliveryAddress ?? firstDetail?.Invoice?.DeliveryAddress ?? "Không có";
                                    var note = firstDetail?.Note ?? "Không có";
                                }
                                <h5><i class="fas fa-user me-2"></i>Thông tin khách hàng</h5>
                                <p><strong>Họ tên:</strong> @name</p>
                                <p><strong>SĐT:</strong> @phone</p>
                                <p><strong>Địa chỉ:</strong> @address</p>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-money-bill-wave me-2"></i>Thông tin thanh toán</h5>
                                <p class="mb-1"><strong>Tổng tiền:</strong> <span class="total-amount">@invoice.TotalAmount?.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span></p>
                                <p class="mb-0">
                                    <strong>Ghi chú:</strong>
                                    @note
                                </p>


                            </div>
                        </div>

                        <h5 class="mb-3"><i class="fas fa-box-open me-2"></i>Chi tiết sản phẩm</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Đơn giá</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in invoice.InvoiceDetails)
                                    {
                                        <tr>
                                            <td><img src="@detail.Product.Image" width="60" class="product-image" style="object-fit:cover;" /></td>
                                            <td>@detail.Product.ProductName</td>
                                            <td class="text-center">@detail.Quantity</td>
                                            <td class="text-end">@(detail.Price?.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</td>
                                            <td class="text-end">@((detail.Quantity * detail.Price)?.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-end">
                            @if (invoice.Status == "Đang xử lý")
                            {
                                <form asp-action="ConfirmInvoice" method="post" asp-route-invoiceId="@invoice.InvoiceId" onsubmit="return confirm('Xác nhận đơn hàng này?');">
                                    <button type="button" class="btn btn-outline-success btn-confirm"><i class="fas fa-check me-1"></i>Xác nhận đơn hàng</button>

                                </form>
                            }

                            else
                            {
                                <span class="fw-bold text-secondary">Trạng thái đơn hàng: @invoice.Status</span>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }

        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="@ViewBag.SelectedStatus" asp-route-page="@(currentPage - 1)">Trước</a>

                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="@ViewBag.SelectedStatus" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="SortAdminOrderStatus" asp-controller="Admin" asp-route-status="@ViewBag.SelectedStatus" asp-route-page="@(currentPage + 1)">Sau</a>

                </li>
            </ul>
        </nav>

    </div>
}
else
{
    <!-- Giỏ hàng trống -->
    <div id="empty-cart" class="empty-cart" style="margin-top:150px;">
        <img src="https://www.svgrepo.com/show/17356/empty-cart.svg" alt="Empty cart" />
        <h1 class="mb-3"><strong>Bạn không có đơn hàng nào cả</strong></h1>
        <p class="mb-4" style="max-width: 600px; margin: 0 auto;">
            Trước khi tiến hành thanh toán, bạn cần thêm một số sản phẩm vào giỏ hàng.
            Bạn sẽ tìm thấy nhiều sản phẩm thú vị trên trang "Cửa Hàng" của chúng tôi.
        </p>
        <a href="/Shop" class="btn-shopping">
            <i class="fas fa-shopping-bag me-2"></i>BẮT ĐẦU MUA SẮM
        </a>
    </div>
}
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
            // Hàm xử lý xác nhận đơn hàng (dành cho Admin)
    document.querySelectorAll('.btn-confirm').forEach(button => {
        button.addEventListener('click', function () {
            const invoiceId = this.closest('.card').querySelector('.invoice-id').textContent;

            if (confirm(`Bạn có chắc chắn muốn xác nhận đơn hàng ${invoiceId}?`)) {
                    fetch(`/Order/ConfirmInvoice?invoiceId=${invoiceId}`, {
                         method: 'POST'
                    })

                .then(response => {
                    if (response.ok) {
                        alert(`Đơn hàng ${invoiceId} đã được xác nhận!`);
                        const statusElement = this.closest('.card').querySelector('.invoice-status');
                        statusElement.textContent = 'Đã xác nhận';
                        statusElement.className = 'invoice-status status-confirmed ms-2';
                        this.style.display = 'none';
                    } else {
                        alert('Có lỗi khi xác nhận đơn hàng!');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Không thể kết nối đến máy chủ!');
                });
            }
        });
    });

    </script>