@model IEnumerable<DoAnThietKeWeb1.Models.ContactMessage>

<div class="container-fluid my-3" style="min-height:70vh;">
    <h2 class="mb-4">Quản lý liên hệ</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Người gửi</th>
                    <th>Email</th>
                    <th>Chủ đề</th>
                    <th>Ngày gửi</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Name</td>
                        <td>@msg.Email</td>
                        <td>@msg.Subject</td>
                        <td>@msg.SentAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (msg.IsRead)
                            {
                                <span class="badge badge-success">Đã đọc</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Chưa đọc</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" href="/Admin/ContactDetails/@msg.Id">Xem</a>
                            <form asp-action="DeleteContact" asp-route-id="@msg.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xóa liên hệ này?')">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
