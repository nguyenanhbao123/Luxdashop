@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    ViewData["Title"] = "Chi tiết người dùng";
    var allRoles = ViewBag.AllRoles as List<string>;
    var userRoles = ViewBag.UserRoles as IList<string>;
    Layout = "_AdminLayout";
}

<h3>Chi tiết người dùng: @Model.Email</h3>

<form asp-action="UpdateUserRoles" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group">
        <label>Chọn vai trò:</label>
        @foreach (var role in allRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role"
                       @(userRoles!.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success mt-3">Cập nhật vai trò</button>
</form>
