<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/cart_style.css">
    <link rel="stylesheet" href="~/css/shop-detail.css">
    <link rel="stylesheet" href="~/css/review.css">
    <link rel="stylesheet" href="~/css/identity_style.css">
    <link rel="stylesheet" href="~/css/Favorite-style.css">

</head>
<body>

    <!-- header section starts  -->
    @Html.Partial("_HeaderPartialView")

    <!-- header section ends -->
            @RenderBody();
    <div id="toast-container" style="
    position: fixed;
    top: 80px;
    right: 20px;
    z-index: 9999;
    min-width: 200px;">
    </div>

    <!-- footer section starts  -->
    @Html.Partial("_FooterPartialView")
    <form id="anti-forgery-form" method="post" style="display:none">
        @Html.AntiForgeryToken()
    </form>

    <!-- footer section ends -->
    <!-- custom css file link  -->
    <script src="~/js/script.js"></script>
    <script src="~/js/cart-checkout.js"></script>
    <script src="~/js/Favorite.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>